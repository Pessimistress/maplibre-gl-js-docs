{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "downlevelIteration": true,
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "jest",
      "geojson",
      "offscreencanvas"
    ]
  },
  "include": [
    "./docs/**/*",
    "batfish.config.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor**/*",
    "dist/**/*"
  ]
}